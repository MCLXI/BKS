[Unit]
Description=HTS's distributed currency daemon
After=network.target

[Service]
User=HTS
Group=HTS

Type=forking
PIDFile=/var/lib/HTSd/HTSd.pid
ExecStart=/usr/bin/HTSd -daemon -pid=/var/lib/HTSd/HTSd.pid \
-conf=/etc/HTS/HTS.conf -datadir=/var/lib/HTSd -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
